root = true

[*]
charset = utf-8
indent_style = spaces
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
line_break = lf

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{js,ts}]
quote_type = single
max_line_length = 120

[*.json]
indent_size = 2